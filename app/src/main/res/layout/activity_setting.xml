<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F5F5F5"
        android:id="@+id/setting_top_layout">
        <ImageView
            android:id="@+id/setting_iv_back"
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/setting_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/setting_top_layout"
        android:background="#dcdcdc"
        android:id="@+id/setting_line1"/>
    <TextView
        android:id="@+id/setting_tv_exchangebg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change background"
        android:textSize="18sp"
        android:drawableLeft="@mipmap/more_bg"
        android:layout_below="@id/setting_line1"
        android:drawablePadding="20dp"
        android:padding="10dp"/>
    <ImageView
        android:id="@+id/setting_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/setting_tv_exchangebg"
        android:background="#DCDCDC"/>
    <RadioGroup
        android:id="@+id/setting_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_line2"
        android:visibility="gone"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/setting_rb_green"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="#C5EDD1"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="Green"
            android:textStyle="bold"/>
        <RadioButton
            android:id="@+id/setting_rb_pink"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="#FCAFAE"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="Red"
            android:textStyle="bold"/>
        <RadioButton
            android:id="@+id/setting_rb_blue"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="#87CEEB"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="Blue"
            android:textStyle="bold"/>
    </RadioGroup>

    <TextView
        android:id="@+id/setting_tv_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current version"
        android:textSize="18sp"
        android:drawableLeft="@mipmap/more_version"
        android:layout_below="@id/setting_rg"
        android:drawablePadding="20dp"
        android:padding="10dp"/>
    <ImageView
        android:id="@+id/setting_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/setting_tv_version"
        android:background="#DCDCDC"/>

    <TextView
        android:id="@+id/setting_tv_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clean cache"
        android:textSize="18sp"
        android:drawableLeft="@mipmap/more_cache"
        android:layout_below="@id/setting_line3"
        android:drawablePadding="20dp"
        android:padding="10dp"/>
    <ImageView
        android:id="@+id/setting_line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/setting_tv_cache"
        android:background="#DCDCDC"/>
    <TextView
        android:id="@+id/setting_tv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share this"
        android:textSize="18sp"
        android:drawableLeft="@mipmap/more_share"
        android:layout_below="@id/setting_line4"
        android:drawablePadding="20dp"
        android:padding="10dp"/>
</RelativeLayout>